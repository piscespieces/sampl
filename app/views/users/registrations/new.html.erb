<div class="bg-neutral">
  <h2 class="text-2xl prose prose-gray max-w-5xl mx-auto mb-4 px-6 py-4">Sign Up</h2>
</div>

<div class="max-w-5xl mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-control w-full max-w-xs mb-4">
      <%= f.label :name, class: "label prose prose-gray"%>
      <%= f.text_field :name, autofocus: true, required: true, placeholder: "Daft Punk", class: "input input-bordered w-full max-w-xs prose" %>
    </div>

    <div class="form-control w-full max-w-xs mb-4">
      <%= f.label :email, class: "label prose prose-gray" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-xs prose" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class: "label prose prose-gray" %>
      <% if @minimum_password_length %>
      <em class="prose prose-gray prose-sm">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full max-w-xs prose" %>
    </div>

    <div class="field mb-4">
      <%= f.label :password_confirmation, class: "label prose prose-gray" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full max-w-xs prose" %>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>